<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.moos.progress.activity.MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:gravity="top"
        android:background="@color/blue_start"
        android:elevation="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#ffffffff"
            android:textStyle="italic"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/btn_details"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="6dp"
            android:padding="6dp"
            android:tint="#ffffff"
            style="@style/ClickableImageView"
            android:src="@drawable/detail_icon"
            android:layout_gravity="right"/>

    </androidx.appcompat.widget.Toolbar>

    <com.moos.library.CircleProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="171dp"
        android:layout_height="156dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        app:animateType="AccelerateDecelerateInterpolator"
        app:circleBroken="true"
        app:end_color="#00EEFA"
        app:start_progress="0"
        app:end_progress="100"
        app:isFilled="false"
        app:isTracked="true"
        app:progressDuration="2000"
        app:progressTextColor="#28AAFB"
        app:progressTextSize="18sp"
        app:start_color="#0052a3"
        app:trackColor="#d9d9d9"
        app:track_width="15dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Update Progress"/>




</LinearLayout>
